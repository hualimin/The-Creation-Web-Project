<style>
    .block-title {
        letter-spacing: .64px;
        color: black;
        line-height: 25px;
        font-weight: 800;
        font-size: 16px;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

        .block-title .title-angle-shap::after, .block-title .title-angle-shap::before {
            position: absolute;
            top: 0;
            content: '';
            background: black;
            left: 0;
        }
    /*完美作品鼠标略过*/
    .post-title a:hover {
        color: #808080;
    }

    .post-meta .post-author a {
        color: black;
        font-weight: 700;
    }

        .post-meta .post-author a:hover {
            color: #ddd3d3;
        }

    .featured-tab .nav-tabs .nav-link.active .tab-head > span.tab-text-title {
        color: #808080;
        background: transparent;
        border: none;
    }

    .tab-text-title {
        color: black;
    }

    .post-tab .nav-tabs .nav-item .nav-link.active::before {
        background: black;
        border-radius: 0;
        height: 12px;
        top: -6px;
    }

    .post-tab .nav-tabs .nav-item .nav-link.active::after {
        background: black;
        border-radius: 0;
        height: 3px;
        width: 12px;
    }

    .post-meta .post-author a {
        color: #a3a3a3;
        font-weight: 700;
    }
</style>
