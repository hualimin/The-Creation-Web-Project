                    </div>
                </div>
                <div class="box">
                    <h3 class="clearfix">猜你喜欢的创作者</h3>
                    <div class="content paper-link">
                        @foreach (var item in Model.May_Like_Users)
                        {
                            <div class="aui-flex">
                                <div class="aui-img-sml">
                                    <a href="@Url.Action("PersonalPage","PersonalSpace",new { id=item.UsersId})" target="_blank"><img src="@item.HeadUrl"></a>
                                </div>
                                <div class="aui-flex-box">
                                    <h4>@item.UsersName</h4>
                                    <p>@item.Hobby</p>
                                </div>
                                <a href="@Url.Action("FocusIt","UserManage",new { id=item.UsersId})" class="unfollow" type="button" style="width:50px;">+关注</a>
