    <style type="text/css">
        .aui-flex {
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            -webkit-box-align: center;
            -webkit-align-items: center;
            align-items: center;
            padding: 15px;
            position: relative;
        }

        .aui-img-sml img {
            width: 60px;
            height: 60px;
            display: block;
            border: none;
            border-radius: 100%;
        }

        .aui-flex-box h4 {
            font-size: 0.95rem;
            font-weight: normal;
            margin-bottom: 0.3rem;
            margin: 0;
            padding: 0;
            display: block;
            margin-block-start: 1.33em;
            margin-block-end: 1.33em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            font-weight: bold;
        }

        .aui-flex-box p {
            font-size: 0.85rem;
            color: #999;
            display: block;
            margin-block-start: 1em;
            margin-block-end: 1em;
            margin-inline-start: 0px;
            margin-inline-end: 0px;
            margin-left: 30px;
        }

        button {
            margin: 0;
            font: inherit;
            color: inherit;
            outline: none;
        }

        .aui-flex-box {
            -webkit-box-flex: 1;
            -webkit-flex: 1;
            flex: 1;
            min-width: 0;
            font-size: 14px;
            color: #333;
        }

        .aui-img-sml {
            width: 45px;
            height: 45px;
            margin-right: 0.5rem;
        }

        .post-block-style {
            position: relative;
            overflow: hidden;
        }

        .media {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: start;
            align-items: flex-start;
        }

        .post-block-style .post-thumb {
            width: 130px;
            height: 85px;
            margin-bottom: 30px;
            margin-right: 25px;
        }

        .post-block-style .post-thumb {
            border-radius: 5px;
            max-width: 100%;
            position: relative;
            overflow: hidden;
        }

            .post-block-style .post-thumb img {
                width: 100%;
            }

            .post-block-style .post-thumb img {
                display: block;
                width: 100%;
                -webkit-transition: all .3s ease-out;
                -o-transition: all .3s ease-out;
                transition: all .3s ease-out;
                vertical-align: middle;
                border-style: none;
            }

        .img-fluid {
            max-width: 100%;
            height: auto;
        }

        .media-body {
            -ms-flex: 1;
            flex: 1;
        }

        .post-cat {
            position: relative;
            font-size: 10px;
            padding: 0 10px;
            background: #1c1c1c;
            text-transform: uppercase;
            font-weight: 700;
            color: #fff;
            height: 20px;
            line-height: 20px;
            display: inline-block;
            border-radius: 5px;
        }

        .post-author {
            font-size: 18px;
            line-height: 24px;
            margin: 12px 0 10px;
            font-weight: 600;
        }

        .post-meta span {
            font-size: 12px;
            color: #a3a3a3;
            margin-right: 8px;
            padding-right: 10px;
            line-height: 12px;
            display: inline-block;
        }

            .post-meta span.post-date {
                border-right: 0;
            }

        .neirong {
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .aui-flex {
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            -webkit-box-align: center;
            -webkit-align-items: center;
            align-items: center;
            padding: 15px;
            position: relative;
        }

        .aui-flex-box {
            -webkit-box-flex: 1;
            -webkit-flex: 1;
            flex: 1;
            min-width: 0;
            font-size: 14px;
            color: #333;
        }

        .aui-content-list .b-line:after {
            left: 15px;
            width: 92%;
        }

        .aui-work-img {
            width: 120px;
            height: 100px;
            position: relative;
            border-radius: 5px;
            overflow: hidden;
            margin-right: 0.8rem;
        }

            .aui-work-img img {
                width: 100%;
                height: auto;
                display: block;
                border: none;
            }

        .aui-flex-box h2 {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            word-break: break-all;
            text-overflow: ellipsis;
            color: #505050;
            font-size: 1rem;
            text-align: justify;
            font-weight: normal;
            margin-bottom: 0.4rem;
        }

        .aui-flex-box span {
            color: #507cf7;
            font-size: 0.7rem;
            border: 1px solid #507cf7;
            border-radius: 2px;
            margin-bottom: 0.2rem;
            display: block;
            width: 45px;
            text-align: center;
            transform: scale(0.8);
        }
    </style>
</head>
