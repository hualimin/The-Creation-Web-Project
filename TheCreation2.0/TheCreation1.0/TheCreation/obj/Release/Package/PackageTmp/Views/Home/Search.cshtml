                        </ul>
                    </div>
                    <!--创作者-->
                    <div class="aui-nav-list-tab">
                        <div class="aui-nav-list-item" style="display:block">
                            @foreach (var item in Model.Result_Users)
                            {
                                <div class="aui-page-list">
                                    <div class="box" style="margin-top: 20px;">
                                        <div class="content">
                                            <dl class="clearfix">
                                                <dt class="clearfix pull-left">
