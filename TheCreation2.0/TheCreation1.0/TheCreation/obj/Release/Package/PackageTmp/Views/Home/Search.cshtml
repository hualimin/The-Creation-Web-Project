    <script type="text/javascript">
        //tab切换
        $(function () {
            $('.aui-nav-list-box ul li').click(function () {
                $(this).addClass('aui-current').siblings().removeClass('aui-current');
                $('.aui-nav-list-tab>div:eq(' + $(this).index() + ')').show().siblings().hide();
            })
        });
