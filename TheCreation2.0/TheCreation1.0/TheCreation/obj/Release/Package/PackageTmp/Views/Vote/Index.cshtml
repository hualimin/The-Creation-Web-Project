@model TheCreation.Models.VoteDisplayViewModel
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>投票活动</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Content/投票活动/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/投票活动/style.css" rel="stylesheet" />
    <link href="~/Content/投票活动/color.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper" id="wrapper">
        <section class="block" style="background-image: url('../../image/6.jpg')">
            <div class="container">
                <div class="about-text-v3">
                    <h2 style="color: white;">投 票 <br /> 主题活动</h2>
                    <p style="color: white;">创世界，给你一个与众不同的世界 </p>
                </div>
            </div>
        </section>

        <section class="block pt-0">
            <div class="fixed-bg bg7"></div>
            <div class="container">
                <ul class="nav nav-tabs audiofy-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                           aria-selected="true">创作者投票</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                           aria-selected="false">创作品投票</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact"
                           aria-selected="false">其他投票</a>
                    </li>
                </ul>
                <!--tabs end-->
                <!--创作者投票-->
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="podcast-page v2 row">
                            <!--投票活动-->
                            @foreach (var item in Model.user_vote)
                            {
                                <div class="col-lg-4 col-md-6" >
                                  <a href="@Url.Action("User_Vote_Dtail","Vote",new { id=item.VoteId})">
                                    <div class="podcast-col">
                                        <div class="podcast-info">
                                            <h3>@item.Title</h3>
                                            <span style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;white-space: nowrap; ">@item.Content</span>
                                            <br />
                                            <span style="width:500px">发起时间：@item.BeginDate</span>
                                            <span style="width:500px">截止时间：@item.EndDate</span>
                                        </div>
                                        <div class="podcast-img">
                                            <img src="@item.ImgUrl" style="width: 100px;height: 100px;">
                                        </div>
                                    </div>
                                  </a>
                                </div>
                             }
                        </div>
                    </div>
                    <!--创作品投票-->
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="podcast-page v2 row">
                            <!--投票活动-->
                            @foreach (var item in Model.work_vote)
                            {
                                <div class="col-lg-4 col-md-6">
                                  <a href="@Url.Action("Work_Vote_Dtail","Vote",new { id=item.VoteId})">
                                    <div class="podcast-col">
                                        <div class="podcast-info">
                                            <h3>@item.Title</h3>
                                            <span style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;white-space: nowrap; ">@item.Content</span>
                                            <br />
                                            <span style="width:500px">发起时间：@item.BeginDate</span>
                                            <span style="width:500px">截止时间：@item.EndDate</span>
                                        </div>
                                        <div class="podcast-img">
                                            <img src="@item.ImgUrl" style="width: 100px;height: 100px;">
                                        </div>
                                    </div>
                                  </a>
                                </div>
                              }
                        </div>                      
                    </div>
                    <!--其他投票-->
                        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                            <div class="podcast-page v2 row">
                                @foreach (var item in Model.normal_vote)
                                {
                                    <div class="col-lg-4 col-md-6">
                                        <a href="@Url.Action("Normal_Vote_Dtail","Vote",new { id=item.VoteId})">
                                            <div class="podcast-col">
                                                <div class="podcast-info">
                                                    <h3>@item.Title</h3>
                                                    <span style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;white-space: nowrap; ">@item.Content</span>
                                                    <br />
                                                    <span style="width:500px">发起时间：@item.BeginDate</span>
                                                    <span style="width:500px">截止时间：@item.EndDate</span>
                                                </div>
                                                <div class="podcast-img">
                                                    <img src="@item.ImgUrl" style="width: 100px;height: 100px;">
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                 }
                            </div>  
                        </div> 
                </div>
            </div>
        </section>

        <section class="block">
            <div class="container">
                <div class="section-title v3 text-center">
                    <span>其他投票活动有待开发</span>
                    <h2>请您敬请期待...</h2>
                </div>
                <div class="text-center">
                    <a href="@Url.Action("Home","Home")" title="" class="btn-default v2">回到首页</a>
                </div>
            </div>
        </section>
    </div>

    <script src="~/Scripts/投票活动/jquery.min.js"></script>
    <script src="~/Scripts/投票活动/popper.js"></script>
    <script src="~/Scripts/投票活动/bootstrap.min.js"></script>
</body>
</html>
