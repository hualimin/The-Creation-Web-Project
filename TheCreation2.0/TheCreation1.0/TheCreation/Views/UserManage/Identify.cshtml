<script>
    $(document).ready(function () {
        $("#condition").addClass('main-hide');
        $("#information").addClass('main-hide');
        $("#success").addClass('main-hide');
        $('#previous_step').hide();
        /*上一步*/
        $('#previous_step').bind('click', function () {
            index--;
            ControlContent(index);
        });
        /*下一步*/
        $('#next_step').bind('click', function () {
            index++;
            ControlContent(index);
        });

    });
    var index = 0;

    function ControlContent(index) {
        var stepContents = ["advantage", "condition", "information", "success"];
        var key; //数组中元素的索引值
        for (key in stepContents) {
            var stepContent = stepContents[key]; //获得元素的值
            if (key == index) {
                if (stepContent == 'advantage') {
                    $('#previous_step').hide();
                } else {
                    $('#previous_step').show();
                }
                if (stepContent == 'success') {
                    $('#next_step').hide();
                } else {
                    $('#next_step').show();
                }
                if (stepContent == 'success') {
                    $('#previous_step').hide();
                }
                if (stepContent == 'information') {
                    $('#next_step').hide();
                }
                $('#' + stepContent).removeClass('main-hide');
                $('#point' + key).addClass('c-select');
                $('#line' + key).removeClass('b-select');
            } else {
                $('#' + stepContent).addClass('main-hide');
                if (key > index) {
                    $('#point' + key).removeClass('c-select');
                    $('#line' + key).removeClass('b-select');
                } else if (key < index) {
                    $('#point' + key).addClass('c-select');
                    $('#line' + key).addClass('b-select');
                }
            }
        }
    }
</script>
