@using TheCreation_Manager.Models
@model ProductionVotedDetail

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User_Vote_Dtail</title>
</head>
<body>
    <div>
        <h2>@Model.vote.Title</h2>
        <img width="200" height="180" src="@Model.vote.ImgUrl" />

        <h4>选项👇</h4>
        <ul>
            @foreach (var item in Model.productions)
            {
                <li>
                    <h7>@item.ProductionName</h7>
                    <br />
                    <img width="200" height="180" src="@item.ImgUrl" /><br />
                    <p>@item.ProductionContent</p>
                    <span>热度：@item.HotCount</span><br />
                    <a href="@Url.Action("SubmitVoteByReferenceId","Vote",new {vid=Model.vote.VoteId,reference_id=item.ProductionId })">喜欢</a>
                </li>

            }
        </ul>


    </div>
</body>
</html>
