@using Models
@model Users

<fieldset class="layui-elem-field layui-field-title" style="margin-top: 50px;">
    <legend>用户信息部分</legend>
</fieldset>
<div class="layui-form-item">
    <label class="layui-form-label">头像：</label>
    <div class="layui-tab-content layui-circle">
        <img width="90" height="90" src="@Model.HeadUrl" style="border-radius:50%; ">
    </div>
</div>

<div class="layui-form-item">
    <label class="layui-form-label">昵称：</label>
    <div class="layui-tab-content">
        <div class="layui-tab-item layui-show">@Model.UsersName</div>
    </div>
</div>

<div class="layui-form-item">
    <label class="layui-form-label">信誉度：</label>
    <div class="layui-tab-content">
        <div class="layui-tab-item layui-show">@Model.Credit</div>
    </div>
</div>

<div class="layui-form-item">
    <label class="layui-form-label">退单数：</label>
    <div class="layui-tab-content">
        <div class="layui-tab-item layui-show">@Model.ChargebackCount</div>
    </div>
</div>

<div class="layui-form-item">
    <label class="layui-form-label">状态：</label>
    <div class="layui-tab-content">
        <div class="layui-tab-item layui-show">@Model.State</div>
    </div>
</div>