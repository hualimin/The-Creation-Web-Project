
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="../../lib/layui-v2.5.5/css/layui.css" media="all">
    <link rel="stylesheet" href="../../css/public.css" media="all">
    <style>
        body {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="layui-form layuimini-form">
        <div class="layui-form-item">
            <label class="layui-form-label required">用户ID</label>
            <div class="layui-input-block">
                <input type="text" name="UsersId" id="UsersId" lay-verify="required" lay-reqtext="用户ID不能为空" placeholder="请输入用户名" readonly value="@ViewBag.uid" class="layui-input">
                <tip>只读选项-用户ID。</tip>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">用户等级</label>
            <div class="layui-input-block">
                <input type="text" name="UsersLevel" id="UsersLevel" lay-reqtext="用户等级不能为空" value="" class="layui-input">
                <tip>修改用户等级。</tip>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">经验值</label>
            <div class="layui-input-block">
                <input type="text" name="Exp" id="Exp" lay-reqtext="用户等级不能为空" value="" class="layui-input">
                <tip>修改经验值。</tip>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">信誉度</label>
            <div class="layui-input-block">
                <input type="text" name="Credit" id="Credit" lay-verify="required" lay-reqtext="用户ID不能为空" placeholder="请输入用户名" class="layui-input">
                <tip>修改用户信誉度。</tip>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label required">下单数</label>
            <div class="layui-input-block">
                <input type="text" name="OrderCount" id="OrderCount" lay-verify="required" lay-reqtext="用户ID不能为空" value="" placeholder="请输入用户名" class="layui-input">
                <tip>修改下单数。</tip>
            </div>
        </div>


        <div class="layui-form-item">
            <label class="layui-form-label required">退单数</label>
            <div class="layui-input-block">
                <input type="text" name="ChargebackCount" id="ChargebackCount" lay-verify="required" lay-reqtext="用户名不能为空" placeholder="请输入用户名" value="" class="layui-input">
                <tip>修改退单数。</tip>
            </div>
        </div>


        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn layui-btn-normal" lay-submit lay-filter="saveBtn">确认保存</button>
            </div>
        </div>
    </div>

    <script src="../../lib/layui-v2.5.5/layui.js" charset="utf-8"></script>
    <script>
layui.use(['form'], function () {
        var form = layui.form,
            layer = layui.layer,
            $ = layui.$;

        //监听提交
    form.on('submit(saveBtn)', function (data) {

                    $.ajax({
                        url: "@Url.Action("alter_usersp", "User")",
                        async: false,
                        data: {
                            json:JSON.stringify(data.field)
                        },
                        type: 'post',
                        success: function (data) {
                            //console.log(data.Exp);
                            if (data == 'success') {
                                layer.msg("操作成功!");
                                setTimeout(function () {
                                    //window.parent.location.href = 'list.do'; 或者
                                    parent.location.reload();//刷新父页面
                                }, 5 * 100);//延迟500毫秒
                            }
                            else {
                                layer.msg(data);
                            }
                        }
                    });

            return false;
        });

    });</script>
</body>
</html>