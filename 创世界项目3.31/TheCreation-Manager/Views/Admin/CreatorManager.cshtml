<script>
        function formatUnixtimestamp(unixtimestamp) {
            if (unixtimestamp == null) return "没认证日期呢";
            var timestamp = unixtimestamp;
            var date = new Date(parseInt(timestamp.replace("/Date(", "").replace(")/", ""), 10));
            Y = date.getFullYear() + '-';
            M = (date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) : date.getMonth() + 1) + '-';
            D = (date.getDate() < 10 ? '0' + (date.getDate()) : date.getDate()) + ' ';
            h = (date.getHours() < 10 ? '0' + (date.getHours()) : date.getHours()) + ':';
            m = (date.getMinutes() < 10 ? '0' + (date.getMinutes()) : date.getMinutes()) + ':';
            s = (date.getSeconds() < 10 ? '0' + (date.getSeconds()) : date.getSeconds());
            var NewDtime = Y + M + D + h + m + s;
            return NewDtime;
        }


        layui.use(['form', 'table', 'laydate'], function () {
        var $ = layui.jquery,
            form = layui.form,
            table = layui.table,
             laydate = layui.laydate;

        table.render({
            elem: '#currentTableId',
            url: '@Url.Content("/Admin/GetCreatorTable")',
            toolbar: '#toolbarDemo',
            defaultToolbar: ['filter', 'exports', 'print', {
                title: '提示',
                layEvent: 'LAYTABLE_TIPS',
                icon: 'layui-icon-tips'
            }],
            cols: [[
                { field: 'CreatorId', width: 100, title: 'ID', sort: true },
                {
                    field: 'CertificationDate', width: 200, title: '认证日期', sort: true,
                    templet: function (d) {
                        return formatUnixtimestamp(d.CertificationDate);
                    } },
                { field: 'CreateType', width: 110, title: '创作类型', sort: true },
                { field: 'CreatorLevel', width: 130, title: '创作等级', sort: true },
                { field: 'CreatorCredit', width: 100, title: '信誉度', sort: true },
                { field: 'FinishedCount', width:100, title: '完单数', sort: true },
                { field: 'EfctCmpltCnt', width: 110, title: '被退单数', sort: true },
                { field: 'GoodRate', width: 230, title: '好评率', sort: true },
                { field: 'PriceRange', width: 230, title: '价格区间' },
                { field: 'State', width: 80, title: '状态' },
                {title: '操作', minWidth: 150, toolbar: '#currentTableBar', align: "center"}
            ]],
            limits: [10, 15, 20, 25, 50, 100],
            limit: 15,
            page: true,
            skin: 'line'
        });

            //日期
            laydate.render({
                elem: '#date'
            });

            // 监听搜索操作
            form.on('submit(data-search-btn)', function (data) {

                var index = layer.msg('查询中，请稍后...', { icon: 16, time: false, shade: 0 });
                setTimeout(function () {
                    table.reload('currentTableId', {
                        url: '/User/serach_creator'
                        // ,methods:"post"
                        , where: {
                            name: $('#creatorname').val(),
                            type: $('#createtype').val(),
                            date: $('#date').val(),
                        }, page: {
                            curr: 1 // 重载后从第一页开始
                        }
                    });
                    layer.close(index);
                }, 800)


                return false;
            });

        /**
         * toolbar监听事件
         */
        table.on('toolbar(currentTableFilter)', function (obj) {
            if (obj.event === 'add') {  // 监听添Urlrl操作
                var index = layer.open({
                    title: '添加创作者',
                    type: 2,
                    shade: 0.2,
                    maxmin:true,
                    shadeClose: true,
                    area: ['100%', '100%'],
                    content: '/User/add_creator',
                });
                $(window).on("resize", function () {
                    layer.full(index);
                });
            } else if (obj.event === 'delete') {  // 监听删除操作
                var checkStatus = table.checkStatus('currentTableId')
                    , data = checkStatus.data;
                layer.alert(JSON.stringify(data));
            }
        });

        //监听表格复选框选择
        table.on('checkbox(currentTableFilter)', function (obj) {
            console.log(obj)
        });

        table.on('tool(currentTableFilter)', function (obj) {
            var data = obj.data;
            if (obj.event === 'edit') {

                var index = layer.open({
                    title: '编辑用户',
                    type: 2,
                    shade: 0.2,
                    maxmin: true,
                    shadeClose: true,
                    area: ['100%', '100%'],
                    content: '/User/alter_creators/' + data.CreatorId,

                    success: function (layero, index) {
                        var body = layer.getChildFrame('body', index);//少了这个是不能从父页面向子页面传值的

                        //获取子页面的元素，进行数据渲染  对弹出的修改页面输入框赋初始值
                        body.contents().find("#CreatorId").val(data.CreatorId);
                        body.contents().find("#CreatorLevel").val(data.CreatorLevel);
                        body.contents().find("#State").val(data.State);
                        body.contents().find("#CreatorCredit").val(data.CreatorCredit);
                        body.contents().find("#FinishedCount").val(data.FinishedCount);
                        body.contents().find("#EfctCmpltCnt").val(data.EfctCmpltCnt);
                        let id = '#isValid' + data.isValid;
                        body.contents().find(id).prop("checked", true);//这是子页面的单选按钮，让其选中

                    },
                });
                $(window).on("resize", function () {
                    layer.full(index);
                });
                return false;
            } 
            else if (obj.event === 'freeze') {
                console.log(obj.data.State);
                 if (obj.data.State == '正常') {
                         $.ajax({
                        url: "@Url.Action("freeze_creator", "User")",
                        async: false,
                        data: {
                            cid: obj.data.CreatorId
                        },
                        type: 'post',
                       success: function (data) {
                           if (data == "success") {
                               layer.msg("成功冻结" + obj.data.CreatorId);
                               obj.update({
                                   State: "冻结"
                               });
                           }
                           else {
                               layer.msg(data);
                           }
                        }
                    });
                    }
                    else if (obj.data.State == '冻结') {
                        $.ajax({
                        url: "@Url.Action("unfreeze_creator", "User")",
                        async: false,
                        data: {
                            cid: obj.data.CreatorId
                        },
                        type: 'post',
                       success: function (data) {
                           if (data == "success") {
                               layer.msg("成功解冻" + obj.data.CreatorId);
                               obj.update({
                                   State: "正常"
                               });
                           }
                           else {
                               layer.msg(data);
                           }
                        }
                    });
                    }

            }
        });

    });
</script>

